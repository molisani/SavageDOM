{
    "compilerOptions": {
        "lib": [
            "dom",
            "es6"
        ],
        "types": [
            "node",
            "mocha"
        ],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "inlineSourceMap": true,
        "strict": true,
        "keyofStringsOnly": true,
        "removeComments": true,
        "rootDir": "src",
        "outDir": "lib"
    },
    "exclude": [
        "node_modules",
        "lib",
        "dist",
        "src/test-utils.ts",
        "src/**/*.spec.ts"
    ]
}