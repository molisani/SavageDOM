{
    "compilerOptions": {
        "lib": [
            "dom",
            "es6"
        ],
        "types": [
            "node"
        ],
        "target": "es6",
        "module": "amd",
        "outFile": "dist/SavageDOM.js",
        "declaration": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "removeComments": true
    },
    "filesGlob": [
        "src/**/*.ts"
    ],
    "compileOnSave": false,
    "files": [
        "src/animation.ts",
        "src/attribute.ts",
        "src/attribute/color-matrix.ts",
        "src/attribute/color.ts",
        "src/attribute/dimension.ts",
        "src/attribute/list.ts",
        "src/attribute/matrix.ts",
        "src/attribute/number-optional-number.ts",
        "src/attribute/number.ts",
        "src/attribute/path-segment.ts",
        "src/attribute/point.ts",
        "src/attribute/preserve-aspect-ratio.ts",
        "src/attribute/transform.ts",
        "src/attribute/view-box.ts",
        "src/constants.ts",
        "src/dynamic.ts",
        "src/element.ts",
        "src/elements/filter.ts",
        "src/elements/non-renderable.ts",
        "src/elements/renderable.ts",
        "src/paper.ts"
    ]
}