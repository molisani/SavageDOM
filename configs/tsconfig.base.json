{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es6"],
    "outDir": "../lib",
    "rootDir": "../src",
    "declaration": true,
    "removeComments": true,
    "downlevelIteration": true,
    "incremental": true,

    "strict": true,
    "keyofStringsOnly": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "esModuleInterop": true,

    "inlineSourceMap": true
  },
  "include": [
    "../src/**/*.ts"
  ],
  "exclude": [
    "../lib/*",
    "../lib-test/*",
  ]
}
