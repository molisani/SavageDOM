{
    "compilerOptions": {
        "lib": [
            "dom",
            "es6"
        ],
        "types": [
            "node"
        ],
        "target": "es6",
        "module": "amd",
        "outFile": "../dist/SavageDOM.js",
        "declaration": true,
        "inlineSourceMap": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "removeComments": true
    },
    "include": [
        "constants.ts",
        "attribute.ts",
        "attribute/*.ts",
        "events.ts",
        "paper.ts",
        "element.ts",
        "elements/**/*.ts",
        "animation.ts"
    ],
    "exclude": [
        "../node_modules"
    ],
    "compileOnSave": false
}