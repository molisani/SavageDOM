{
    "compilerOptions": {
        "lib": [
            "dom",
            "es5"
        ],
        "types": [
            "node"
        ],
        "target": "es5",
        "module": "amd",
        "outFile": "../dist/SavageDOM.core.js",
        "declaration": true,
        "inlineSourceMap": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "removeComments": true
    },
    "files": [
        "constants.ts",
        "attribute.ts",
        "attribute/color.ts",
        "attribute/color-matrix.ts",
        "attribute/dimension.ts",
        "attribute/list.ts",
        "attribute/matrix.ts",
        "attribute/number.ts",
        "attribute/number-optional-number.ts",
        "attribute/point.ts",
        "attribute/preserve-aspect-ratio.ts",
        "attribute/transform.ts",
        "attribute/view-box.ts",
        "paper.ts",
        "element.ts"
    ],
    "exclude": [
        "elements/renderable.ts",
        "elements/non-renderable.ts",
        "elements/filter.ts",
        "animation.ts",
        "../node_modules"
    ],
    "compileOnSave": false
}