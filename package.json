{
  "name": "savagedom",
  "version": "2.0.0-preview.2",
  "description": "Object-oriented, DOM-wrapping SVG manipulation library written in TypeScript",
  "keywords": [
    "svg",
    "animation"
  ],
  "homepage": "http://www.molisani.us/SavageDOM/index.html",
  "bugs": {
    "url": "https://github.com/molisani/SavageDOM/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/molisani/SavageDOM.git"
  },
  "license": "LGPL-3.0",
  "author": "Michael Molisani <michael@molisani.us> (http://molisani.us)",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "lint": "eslint --ext .ts src",
    "build-dist": "webpack && cat HEADER.txt dist/output.js > dist/savagedom.js",
    "build-lib": "tsc",
    "build": "npm run build-dist && npm run build-lib",
    "docs": "typedoc --mode file --out docs --ignoreCompilerErrors --excludeNotExported --excludePrivate src/index.ts",
    "prepublishOnly": "npm run lint && npm run build && npm run docs",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/github": "^5.4.3",
    "@semantic-release/npm": "^5.1.15",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "eslint": "^5.16.0",
    "semantic-release": "^15.13.24",
    "ts-loader": "^6.1.2",
    "typedoc": "^0.15.0",
    "typescript": "^3.6.3",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9"
  }
}
